<center>
<div class="container">
<div class="center jumbotron">
<h1>List of All Agents</h1>
<table class="table table-hover table-bordered" >
  <tr>
    <th>Agent Name &nbsp; &nbsp; </th>
	<th>E-Mail &nbsp; &nbsp; </th>
	<th>Date of Joining &nbsp; &nbsp; </th>
	<th>No of Packages &nbsp; &nbsp; </th>
	<th> &nbsp; &nbsp; </th>	
  </tr>
<% @agent.each do |agent| %>
  <tr>
    <td><%= agent.name%></td> 
	<td><%= agent.email%></td> 
	<td><%= agent.created_at.to_date%></td> 
  <% if current_admin %>
	<td><%=link_to agent.packages.count, index_packages_agent_path(agent) %></td>
  <% else %>
	<td><%= agent.packages.count%></td> 
  <% end %>
	<td><%= link_to "View", agent_path(agent) %></td> 
  </tr>
<% end %>
</table>
</div>
</div>
	<p><%= link_to "Back", admin_home_path, class: "btn btn-primary" %></p>
	<p><%= link_to "Back to home", root_path, class: "btn btn-primary" %></p>
</center>