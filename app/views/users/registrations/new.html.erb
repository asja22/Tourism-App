<center>
<div class="container">
<h2>New User Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
 <table class="table table1 table-borderless">
  <tr>
  <div class="field">
       <td><%= f.label :name %></td>
       <td><%= f.text_field :name, autofocus: true %></td>
  </div>
  </tr>
  
  <tr>
  <div class="field">
    <td><%= f.label :email %></td>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
  </div>
  </tr>

  <tr>
  <div class="field">
    <td><%= f.label :password %></td>
    <td><% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %></td>
  </div>
  </tr>

  <tr>
  <div class="field">
    <td><%= f.label :password_confirmation %></td>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </div>
  </tr>
  </table>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
</br>
<%= render "users/shared/links" %>
</div>
</center>
