<center>
<div class="container">
<div class="center jumbotron">
<h1>One Stop Solution for World Wide Tour Pacakges</h1>

<% if current_user %>
<P>Welcome ! <%= current_user.name %></p>
<P><%= link_to 'Edit Profile', edit_user_registration_path, class: "btn btn-primary" %></p>
<p><%= link_to "Sign Out", destroy_user_session_path, :method => :delete , class: "btn btn-primary" %></p>
<p>-----------------------</p>

<% elsif current_admin %>
<P>Welcome Admin! <%= current_admin.name %></p>
<P><%= link_to 'Edit Admin Profile', edit_admin_registration_path, class: "btn btn-primary" %></p>
<p><%= link_to "Admin Sign Out", destroy_admin_session_path, :method => :delete , class: "btn btn-primary" %></p>
<p>-----------------------</p>

<% elsif current_agent %>
<P>Welcome Agent! <%= current_agent.name %></p>
<P><%= link_to 'Edit Agent Profile', edit_agent_registration_path, class: "btn btn-primary" %></p>
<p><%= link_to "Admin Sign Out", destroy_agent_session_path, :method => :delete , class: "btn btn-primary" %></p>
<p>-----------------------</p>

<% else %>

<p><%= link_to "Sign In", new_user_session_path , class: "btn btn-primary"%></p>
<p><%= link_to "New User Registration", new_user_registration_path , class: "btn btn-primary"%></p>

<p><%= link_to "Agents Home page", agent_home_path , class: "btn btn-primary"%></p>

<p><%= link_to "Admin Home page", admin_home_path , class: "btn btn-primary"%></p>
<% end %>


</div>
</div>
</center>