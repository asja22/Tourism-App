<center>
<div class="container">
<div class="center jumbotron">
<h1>Create New Tour Packages</h1>


<%= form_for(@package) do |f| %>

<div class="container">
<% if @package.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@package.errors.count, "error") %>.
    
    <ul>
    <% @package.errors.full_messages.each do |msg| %>
      <table width="20%">
	  <tr>
	  <td><li><%= msg %></li></td>
      </tr>
      </table>
    <% end %>
	</div>
	</ul>
  </div>
<% end %>
</div>

<div class="container">
  <table class="table3">
	  
	  <tr>
	  <div class="form-group">
	  <td><%= f.label :name, 'Name of Package : ' %> </td>
      <td><%= f.text_field :name, :class=>"form-control form-control-sm"%> </td>
      </div>
      </tr>
	  
	  <tr>
	  <div class="form-group">
	  <td><%= f.label :days , 'Days : '%> </td>
      <td><%= f.text_field :days, :class=>"form-control form-control-sm col-2" %> </td>
      </div>
      </tr>
	  
	  <tr>
	  <div class="form-group">
	  <td><%= f.label :nights , 'Nights : '%> </td>
      <td><%= f.text_field :nights, :class=>"form-control form-control-sm col-2" %> </td>
      </div>
      </tr>
	  
	  <tr>
	  <div class="form-group">
	  <td><%= f.label :departure, 'Date of departure (yy-mm-dd) : '%> </td>
      <td><%= f.text_field :departure,  :class=>"form-control form-control-sm col-3"%> </td>
      </div>
      </tr>

	  <tr>
	  <div class="form-group">
	  <td><%= f.label :country_id , 'Country : '%> </td>
      <td><%= f.collection_select :country_id ,Country.order(:name),:id,:name, include_blank: true %> </td>
      </div>
      </tr>
	  
	  <tr>
	  <div class="form-group">
	  <td><%= f.label :province_id, 'Province : ' %> </td>
	  <td><%= f.grouped_collection_select :province_id ,Country.order(:name),:province,:name,:id,:name, include_blank: true %> </td>
      </div>
      </tr>
	  
	  <tr>
	  <div class="form-group">
	  <td><%= f.label :itinerary , 'Tour Itinerary : '%> </td>
      <td><%= f.hidden_field :itinerary, :class=>"form-control form-control-sm", :size=>'60x4'%><br>
	  <trix-editor class="editor" input="package_itinerary"></trix-editor></td>
      </div>
      </tr>
	  
	  <tr>
	  <div class="form-group">
	  <td><%= f.label :price , 'Price(RM) : '%> </td>
      <td><%= f.text_field :price, :class=>"form-control form-control-sm col-2"  %> </td>
      </div>
      </tr>
	  <tr>
	  <div class="form-group">
	  <td><%= f.label :includes , 'Inclusions in Package : '%> </td>
      <td><%= f.text_field :includes, :class=>"form-control form-control-sm" %> </td>
      </div>
      </tr>
   </table>
</div>

      <p><%= f.submit "Create New Package", class: "btn btn-primary" %></p>
    <% end %>

</div>
</div>
	<p><%= link_to "Back", packages_home_path, class: "btn btn-primary" %></p>
	<p><%= link_to "Back to home", root_path, class: "btn btn-primary" %></p>
</center>