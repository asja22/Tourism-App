<center>
<div class="container">
<div class="center jumbotron">
<h1>Details of Tour Packages</h1>

<table class="table table-hover table-bordered text-left" style="width:90%">
  <tr>
    <th>Package Name: &nbsp; &nbsp; &nbsp;</th>
    <th><%= @package.name%></th>	
  </tr>
  <% if current_admin %>
  <tr>
    <th>Agent Name: &nbsp; &nbsp; &nbsp;</th>
    <th><%= @package.agent.name%></th>	
  </tr>
  <% end %>
  <tr>
    <th>Duration: &nbsp; &nbsp; &nbsp;</th>
    <th><%= @package.days%> Days & <%= @package.nights%> Nights&nbsp; &nbsp; </th>	
  </tr>
  
  <tr>
    <th>Date of Departure(yy-mm-dd): &nbsp; &nbsp; &nbsp;</th>
    <th><%= @package.departure %> &nbsp; &nbsp; </th>	
  </tr>
  
  <tr>
    <th>Destination: &nbsp; &nbsp; &nbsp;</th>
    <th>Country : <%= @package.country.name%>,  Province : <%= @package.province.name%> &nbsp; &nbsp; </th>	
  </tr>
  
  <tr>
    <th>Tour Itinerary: &nbsp; &nbsp; &nbsp;</th>
    <th><%= sanitize @package.itinerary %> &nbsp; &nbsp; </th>	
  </tr>
  
  <tr>
    <th>Price(RM): &nbsp; &nbsp; &nbsp;</th>
    <th><%= @package.price%> &nbsp; &nbsp; </th>	
  </tr>
  
  <tr>
    <th>Includes: &nbsp; &nbsp; &nbsp;</th>
    <th><%= @package.includes%> &nbsp; &nbsp; </th>	
  </tr>
</table>

<% if current_agent %>
<p><%= link_to "Edit", edit_package_path(@package), class: "btn btn-primary" %></p>
<% end %>

<% if current_admin %>
<h3>Details of Agency :</h3>
<table class="table table-hover table-bordered" style="width:90%">
  <tr>
    <th>Agent Name &nbsp; &nbsp; </th>
	<th>Agent Email &nbsp; &nbsp; </th>
	<th>Joined Date yy-mm-dd &nbsp; &nbsp; </th>	
  </tr>

    <tr>
    <td><%= @package.agent.name%></td> 
	<td><%= @package.agent.email%></td> 
	<td><%= @package.agent.created_at.to_date%></td>  
    </tr>
</table>

<% end %>
<p><%= link_to "Back", :back, class: "btn btn-primary" %></p>
<p><%= link_to "Back to Package list", packages_path, class: "btn btn-primary" %></p>
</div>
</div>
	<p><%= link_to "Packages home", packages_home_path, class: "btn btn-primary" %></p>
	<p><%= link_to "Back to home", root_path, class: "btn btn-primary" %></p>
</center>