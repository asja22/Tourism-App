<center>
<div class="container">
<div class="center jumbotron">
<h1>Details of Tour Packages</h1>

<table class="table table-hover table-bordered text-left" style="width:90%">
  <tr>
    <th>Package Name: &nbsp; &nbsp; &nbsp;</th>
    <td><%= @package.name%></td>	
  </tr>
  <% if current_admin %>
  <tr>
    <th>Agent Name: &nbsp; &nbsp; &nbsp;</th>
    <td><%= @package.agent.name%></td>	
  </tr>
  <% end %>
  <tr>
    <th>Duration: &nbsp; &nbsp; &nbsp;</th>
    <td><%= @package.days%> Days & <%= @package.nights%> Nights&nbsp; &nbsp; </td>	
  </tr>
  
  <tr>
    <th>Date of Departure(yy-mm-dd): &nbsp; &nbsp; &nbsp;</th>
    <td><%= @package.departure %> &nbsp; &nbsp; </td>	
  </tr>
  
  <tr>
    <th>Destination: &nbsp; &nbsp; &nbsp;</th>
    <td>Country : <%= @package.country.name%>,  Province : <%= @package.province.name%> &nbsp; &nbsp; </td>	
  </tr>
  
  <tr>
    <th>Tour Itinerary: &nbsp; &nbsp; &nbsp;</th>
    <td><%= sanitize @package.itinerary %> &nbsp; &nbsp; </td>	
  </tr>
  
  <tr>
    <th>Price(RM): &nbsp; &nbsp; &nbsp;</th>
    <td><%= @package.price%> &nbsp; &nbsp; </td>	
  </tr>
  
  <tr>
    <th>Includes: &nbsp; &nbsp; &nbsp;</th>
    <td><%= @package.includes%> &nbsp; &nbsp; </td>	
  </tr>
</table>

<% if current_agent %>
<p><%= link_to "Edit", edit_package_path(@package), class: "btn btn-primary" %></p>
<p><%= link_to "Back","javascript:history.go(-1);", class: "btn btn-primary" %>
<!--<p><%= link_to "Back to Package list", packages_path, class: "btn btn-primary" %></p>-->


<% elsif current_admin %>
<p><%= link_to "Back","javascript:history.go(-1);", class: "btn btn-primary" %>
<!--<p><%= link_to "Approval Page", approval_path, class: "btn btn-primary" %></p>
<p><%= link_to "Package list", packages_path, class: "btn btn-primary" %></p>-->

<% else %>
<p><%= link_to "Back","javascript:history.go(-1);", class: "btn btn-primary" %></p>
<% end %>

</div>
</div>
    <p><%= link_to "Packages home", packages_home_path, class: "btn btn-primary" %></p>
	<p><%= link_to "Back to home", root_path, class: "btn btn-primary" %></p>
</center>