<center>
<div class="container">
<div class="center jumbotron">
<h1>Tour Packages Management</h1>

<% if current_agent %>
<P>Welcome Agent! <%= current_agent.name %></p>
<P><%= link_to 'Create New Package', new_path, class: "btn btn-primary" %></p>
<P><%= link_to 'List of Package', packages_path, class: "btn btn-primary" %></p>
<p><%= link_to "Back", agent_home_path , class: "btn btn-primary"%></p>

<% elsif current_admin %>
<P>Welcome Admin! <%= current_admin.name %></p>
<P><%= link_to 'List of Package', packages_path, class: "btn btn-primary" %></p>
<p><%= link_to "Package Approval", approval_path, class: "btn btn-primary" %></p>
<p><%= link_to "Back", admin_home_path , class: "btn btn-primary"%></p>

<% else %>
<p>you are not an Agent or Admin</p>
<p><%= link_to "home", root_path , class: "btn btn-primary"%></p>
<% end %>

</div>
</div>
</center>