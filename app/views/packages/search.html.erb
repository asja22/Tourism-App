<center>
<div class="container">
<div class="center jumbotron">
	<p><%= render 'pages/shared/search' %></p></br>
<h1> Tour Packages</h1>
<table class="table table-hover table-bordered" >
  <tr>
    <th>Package Name &nbsp; &nbsp; </th>
	<th>Country &nbsp; &nbsp; </th>
	<th>Province &nbsp; &nbsp; </th>
	<th>Date of Departure &nbsp; &nbsp; </th>
	<th>Status &nbsp; &nbsp; </th>
	<th>Agent Name &nbsp; &nbsp; </th>
	<th>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; </th>
  </tr>
<% @results.each do |result| %>
    <tr>
    <td><%= result.name%></td> 
	<td><%= result.country.name%></td> 
	<td><%= result.province.name%></td> 
	<td><%= result.departure%></td> 
	<% if result.approved? %> 
		<td><%= "Approved"%></td>  
	<% else %>
		<td><%= "Waiting for approval"%></td> 
	<% end %>
	<td><%= result.agent.name%></td>
	<td><%= link_to "View", package_path(result) %></td> 
    </tr>
<% end %>
</table>
</div>
</div>
	<p><%= link_to "Back", root_path, class: "btn btn-primary" %></p>
</center>